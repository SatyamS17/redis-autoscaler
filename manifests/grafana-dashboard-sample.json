    "links": [],
    "panels": [
        {
            "type": "row",
            "title": "Redis Cluster Overview",
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 0
            }
        },
        {
            "type": "stat",
            "title": "Total Commands/sec",
            "targets": [
                {
                    "expr": "sum(rate(redis_commands_total[1m]))",
                    "legendFormat": "Total Ops/sec"
                }
            ],
            "gridPos": {
                "h": 5,
                "w": 6,
                "x": 0,
                "y": 1
            }
        },
        {
            "type": "stat",
            "title": "Total CPU Usage (%)",
            "targets": [
                {
                    "expr": "avg(rate(redis_cpu_sys_seconds_total[1m]) + rate(redis_cpu_user_seconds_total[1m])) * 100",
                    "legendFormat": "CPU %"
                }
            ],
            "gridPos": {
                "h": 5,
                "w": 6,
                "x": 6,
                "y": 1
            }
        },
        {
            "type": "stat",
            "title": "Memory Usage (MB)",
            "targets": [
                {
                    "expr": "sum(redis_memory_used_bytes) / 1024 / 1024",
                    "legendFormat": "MB"
                }
            ],
            "gridPos": {
                "h": 5,
                "w": 6,
                "x": 12,
                "y": 1
            }
        },
        {
            "type": "stat",
            "title": "Connected Clients",
            "targets": [
                {
                    "expr": "sum(redis_connected_clients)",
                    "legendFormat": "Clients"
                }
            ],
            "gridPos": {
                "h": 5,
                "w": 6,
                "x": 18,
                "y": 1
            }
        },
        {
            "type": "row",
            "title": "Per-Node Metrics",
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 6
            }
        },
        {
            "type": "timeseries",
            "title": "CPU Usage per Redis Pod (%)",
            "targets": [
                {
                    "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"redis-redis-cluster-.*\", container=\"redis-redis-cluster\"}[1m])) by (pod) * 100",
                    "legendFormat": "{{pod}}",
                    "interval": ""
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 7
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percent"
                }
            }
        },
        {
            "type": "timeseries",
            "title": "Memory Usage per Redis Pod (MB)",
            "targets": [
                {
                    "expr": "sum(container_memory_working_set_bytes{pod=~\"redis-redis-cluster-.*\", container=\"redis-redis-cluster\"}) by (pod) / 1024 / 1024",
                    "legendFormat": "{{pod}}",
                    "interval": ""
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 7
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "decmbytes"
                }
            }
        },
        {
            "type": "row",
            "title": "Read/Write Workload Analysis",
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 15
            }
        },
        {
            "type": "timeseries",
            "title": "Read vs Write Commands/sec",
            "targets": [
                {
                    "expr": "sum(rate(redis_commands_total{cmd=~\"get|mget\"}[1m]))",
                    "legendFormat": "Read",
                    "interval": ""
                },
                {
                    "expr": "sum(rate(redis_commands_total{cmd=~\"set|hset|incr|del\"}[1m]))",
                    "legendFormat": "Write",
                    "interval": ""
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 24,
                "x": 0,
                "y": 16
            }
        },
        {
            "type": "row",
            "title": "I/O and Network",
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 24
            }
        },
        {
            "type": "timeseries",
            "title": "Network Input/Output per Pod (bytes/sec)",
            "targets": [
                {
                    "expr": "rate(redis_net_input_bytes_total[1m])",
                    "legendFormat": "{{pod}} input",
                    "interval": ""
                },
                {
                    "expr": "rate(redis_net_output_bytes_total[1m])",
                    "legendFormat": "{{pod}} output",
                    "interval": ""
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 24,
                "x": 0,
                "y": 25
            }
        },
        {
            "type": "row",
            "title": "Top Load Table",
            "gridPos": {
                "h": 1,
                "w": 24,
                "x": 0,
                "y": 33
            }
        },
        {
            "type": "table",
            "title": "Redis Nodes by Command Rate",
            "targets": [
                {
                    "expr": "sum(rate(redis_commands_total[1m])) by (pod)",
                    "legendFormat": "{{pod}}",
                    "interval": ""
                }
            ],
            "gridPos": {
                "h": 8,
                "w": 24,
                "x": 0,
                "y": 34
            }
        }
    ],
    "refresh": "30s",
    "schemaVersion": 38,
    "style": "dark",
    "tags": [
        "redis",
        "autoscale"
    ],
    "templating": {
        "list": [
            {
                "name": "namespace",
                "type": "query",
                "label": "Namespace",
                "datasource": "Prometheus",
                "query": "label_values(redis_memory_used_bytes, namespace)",
                "includeAll": false,
                "refresh": 1
            },
            {
                "name": "pod",
                "type": "query",
                "label": "Pod",
                "datasource": "Prometheus",
                "query": "label_values(redis_memory_used_bytes, pod)",
                "includeAll": true,
                "multi": true,
                "refresh": 1
            }
        ]
    },
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "timezone": "browser",
    "title": "Redis Cluster Load Overview (Bitnami)",
    "version": 1
}